@using System.IO
@model WebDAL.Entity.Guest

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout";
}

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="row  text-center">
    <div class="col-md-4">
        <form asp-action="Login">
            <span class="bg-primary rounded-lg">
                <object type="image/svg+xml" data="~/images/iconLogin.svg" width="50" height="50"> </object>
                @* <img src="images/iconLogin.svg" class="h-25 w-25 mb-4" alt="" width="72" height="72"/> *@
            </span>
            <h1 class="h3 mb-3 font-weight-normal">Вход</h1>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="name" class="sr-only">Имя</label>
            <input asp-for="name" class="form-control" placeholder="Имя" autofocus>
            <span asp-validation-for="name" class="text-danger"></span>

            <label asp-for="password" class="sr-only">Пароль</label>
            <input asp-for="password" type="password" class="form-control" placeholder="Пароль">
            <span asp-validation-for="password" class="text-danger"></span>
            <button class="btn btn-lg btn-primary btn-block mb-5" type="submit">Войти</button>
        </form>
    </div>
</div>